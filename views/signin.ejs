<%- include("./partials/header.ejs") %>

    <body ng-app="myApp" ng-controller="myCtrl">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-xl-4 col-lg-5 col-md-7 mx-lg-0 align-self-center">
                    <div class="card card-plain">
                        <div class="card-header pb-0 text-start">
                            <h4 class="font-weight-bolder text-dark text-gradient">Sign In</h4>
                            <p class="text-sm b-0">Enter your email and password to sign in</p>
                        </div>
                        <div class="card-body">
                            <form role="form" id="loginForm" name="loginForm" novalidate>
                                <div class="mb-3">
                                    <input ng-model="userEmail" id="userEmail" name="userEmail" type="email"
                                        class="form-control form-control-lg validate" placeholder="Email"
                                        aria-label="Email" autocomplete="off" autofocus="on" onfocus="focused(this)"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <input ng-model="userPassword" id="userPassword" name="userPassword" type="password"
                                        class="form-control form-control-lg validate" placeholder="Password"
                                        aria-label="Password" autocomplete="off" required>
                                </div>
                                <div class="form-check form-switch">
                                    <input ng-model="rememberMe" class="form-check-input" type="checkbox"
                                        id="rememberMe" name="rememberMe">
                                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                                </div>
                                <div class="text-center">
                                    <button ng-click="loginUser()"
                                        ng-disabled="loginForm.userEmail.$invalid || loginForm.userPassword.$invalid"
                                        id="btn-userLogin" type="submit"
                                        class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Sign
                                        in</button>
                                </div>
                                <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response">
                                <input type="hidden" name="action" value="validate_captcha">
                            </form>
                        </div>
                        <div class="card-footer text-center pt-0 px-lg-2 px-1">
                            <p class="mb-4 text-xs mx-auto">
                                Forgot password?
                                <a href="/forgot-user-password"
                                    class="text-primary text-gradient font-weight-bold">Reset</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer py-5">
            <div class="container">
                <div class="row">
                    <div class="col-8 mx-auto text-center mt-1">
                        <small class="mb-0 text-secondary">
                            Copyright
                            <script>
                                document.write(new Date().getFullYear())
                            </script> &copy; All rights reserved
                        </small>
                    </div>
                </div>
            </div>
        </footer>
        <%- include("./partials/footer.ejs") %>