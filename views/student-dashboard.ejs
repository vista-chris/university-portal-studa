            <script>
                if (document.getElementById('session')) {
                    var element = document.getElementById('session');
                    const example = new Choices(element, {});
                }

                var ctx2 = document.getElementById("chart-bar").getContext("2d");

                new Chart(ctx2, {
                    type: "doughnut",
                    data: {
                        labels: ['Completed', 'Pending'],
                        datasets: [{
                            label: "Students",
                            weight: 9,
                            cutout: 50,
                            tension: 0.9,
                            pointRadius: 2,
                            borderWidth: 2,
                            backgroundColor: ['#17c1e8', '#a8b8d8'],
                            data: [75, 25],
                            fill: false
                        }],
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false,
                            }
                        },
                        interaction: {
                            intersect: false,
                            mode: 'index',
                        },
                        scales: {
                            y: {
                                grid: {
                                    drawBorder: false,
                                    display: false,
                                    drawOnChartArea: false,
                                    drawTicks: false,
                                },
                                ticks: {
                                    display: false
                                }
                            },
                            x: {
                                grid: {
                                    drawBorder: false,
                                    display: false,
                                    drawOnChartArea: false,
                                    drawTicks: false,
                                },
                                ticks: {
                                    display: false,
                                }
                            },
                        },
                    },
                });
            </script>